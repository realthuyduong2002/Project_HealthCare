<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activity.ChoooseSpecialtyMakeAppointmentActivity">

    <!-- First layout: Bone -->
    <LinearLayout
        android:id="@+id/layoutBone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- First TextView (Bone) -->
        <TextView
            android:id="@+id/textViewBone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bone"
            android:layout_gravity="center_vertical"/>

        <!-- First Button (Choose for Bone) -->
        <Button
            android:id="@+id/buttonBone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose" />
    </LinearLayout>

    <!-- Second layout: Heart -->
    <LinearLayout
        android:id="@+id/layoutHeart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <!-- Second TextView (Heart) -->
        <TextView
            android:id="@+id/textViewHeart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Heart"
            android:layout_gravity="center_vertical"/>

        <!-- Second Button (Choose for Heart) -->
        <Button
            android:id="@+id/buttonHeart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose" />
    </LinearLayout>

</LinearLayout>
